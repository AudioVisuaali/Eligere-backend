type Poll {
  id: ID! @id
  createdAt: DateTime! @createdAt
  opensAt: DateTime! @opensAt
  closesAt: DateTime! @closesAt
  community: Community
  prevPoll: Poll
  title: String!
  desciprion: String!
  creator: User!
  userRequired: Boolean! @default(value: false)
}

type Votes {
  poll: Poll!
  movie: Movie!
  user: User
}

type Movie {
  id: ID! @id
  poll: Poll!
  release: Release!
  name: String!
  description: String!
  length: Int!
  ratings: [Rating!]!
  trailers: [Trailer!]!
}

type Genre {
  id: ID! @id
  value: String!
}

type Trailer {
  id: ID! @id
  platform: String!
  url: String!
  id: String!
}

type Release {
  id: ID! @id
  movie: Movie!
  year: Int!
  month: Int!
  day: Int!
}

type Rating {
  id: ID! @id
  type: String!
  rating: Int!
}

type User {
  id: ID! @id
  email: String! @unique
  password: String!
  name: String!
  posts: [Post!]!
}